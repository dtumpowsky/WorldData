<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/styles.css">
    <script src="js/jquery-3.3.1.js"></script>
    <script src="js/scripts.js"></script>
    <meta charset="utf-8">
    <title>World Data</title>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <form action="/city" method="get">
          <label for="city">Search for City:</label>
          <input id="city" name="city" type="text">
        </form>
        <form action="/country" method="get">>
          <label for="country">Search for Country:</label>
          <input id="country" name="country" type="text">
        </form>
        <button type="submit" name="button">Search</button>
        @if(Model != null )
        {
        <h3>Country Information</h3>
        <br>
        <ul>
          @foreach(var country in Model)
          {
          <li>Country  : @country.GetName()</li>
          <li>Continent  : @country.GetContinent()</li>
          <li>Regions  : @country.GetRegion()</li>
          <li>Surface Area : @country.GetSurfaceArea()</li>
          <li>Date of Independance : @country.GetIndepYear()</li>
          <li>Population   : @country.GetPopulation()</li>
          <li>Life Expectancy   : @country.GetLifeExpectancy()</li>
          <li>GNP  : @country.GetGNP()</li>
          <li>Old GNP  : @country.GetGNPOld()</li>
          <li>Local Name  : @country.GetLocalName()</li>
          <li>GovernmentForm: @country.GetGovernmentForm()</li>
          <li>HeadOfState  : @country.GetHeadOfState()</li>
          <li>HeadOfState  : @country.GetHeadOfState()</li>
          }
          @foreach(var city in Model)
          {
          <li>City  : @city.GetName()</li>
          <li>Country Code  : @city.GetCountryCode()</li>
          <li>District  : @city.GetDistrict()</li>
          <li>Population  : @city.GetPopulation()</li>
          }
        </ul>
        }
      </div>
    </div>
  </body>
</html>
